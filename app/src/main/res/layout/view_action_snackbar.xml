<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dark_snackbar">
    <TextView
        android:id="@+id/text_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:layout_marginEnd="@dimen/item_horizontal_margin"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="19dp"
        tools:text="@string/deleted"
        android:fontFamily="@font/montserrat_semibold"/>
    <Button
        android:id="@+id/button_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/item_horizontal_margin"
        android:paddingEnd="@dimen/item_horizontal_margin"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:textColor="@color/blue_selector"
        android:fontFamily="@font/montserrat_semibold"
        tools:text="@string/undo"
        android:textSize="@dimen/title_size"/>
</RelativeLayout>