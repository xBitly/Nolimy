<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_item_alien_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_view_alien_card"
    android:clickable="true"
    android:focusable="true">
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Andrey Avdeev"
        android:textSize="@dimen/title_size"
        android:fontFamily="@font/montserrat_semibold"
        android:singleLine="true"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/item_horizontal_margin"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:layout_marginEnd="@dimen/item_horizontal_margin"
        android:singleLine="true"
        android:textSize="@dimen/little_text_size"
        tools:text="UX/UI designer" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_description"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/item_horizontal_margin"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:background="@drawable/bg_view_line"/>
</RelativeLayout>